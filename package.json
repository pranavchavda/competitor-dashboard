{
  "name": "competitor-dash",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:pack": "electron-builder",
    "electron:dist": "npm run build && electron-builder",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --features debug-console"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.1.3",
    "@prisma/client": "^6.12.0",
    "@types/js-cookie": "^3.0.6",
    "axios": "^1.7.0",
    "cheerio": "^1.0.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.2.6",
    "js-cookie": "^3.0.5",
    "next": "15.4.3",
    "openai": "^5.10.2",
    "prisma": "^6.12.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.7",
    "@tauri-apps/cli": "^2.7.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "postcss": "^8",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^4.0.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.7",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.idrinkcoffee.competitordash",
    "productName": "Competitor Dashboard",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/@img/sharp-darwin-*",
      "!node_modules/@img/sharp-win32-*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "asarUnpack": [
      "node_modules/next/**/*",
      "node_modules/@next/**/*",
      "node_modules/.bin/**/*",
      ".next/**/*",
      "package.json"
    ]
  }
}
