{
  "productName": "Competitor Dashboard",
  "version": "0.1.0",
  "identifier": "com.idrinkcoffee.competitordash",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"  
  },
  "app": {
    "windows": [
      {
        "title": "Competitor Dashboard",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "app", "dmg", "deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../package.json",
      "../pnpm-lock.yaml", 
      "../server/**/*",
      "../src/lib/**/*", 
      "../prisma/schema.prisma",
      "../node_modules/@prisma/client/**/*",
      "../.env"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}